<section class="showcase-list">
  {%- for post in collections.post -%}
    <a
      href="{{ post.url }}"
      class="showcase-list--section"
      data-img-lightness={{ post.data.img.lightness or 'dark' }}
    >
      <h2>{{ post.data.title }}</h2>
      {% image post.data.img.src, post.data.img.alt %}
  </a>
  {%- endfor -%}
</section>