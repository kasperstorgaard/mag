---
layout: layouts/base.njk
---
<main>
  <section class="showcase-list">
    {%- for post in collections.post -%}
      <section
        class="showcase-list--section"
        data-img-lightness={{ post.data.imgLightness or 'dark' }}
      >
        <h2>{{ post.data.title }}</h2>
        {% image post.data.imgSrc, post.data.imgAlt %}
      </section>
    {%- endfor -%}
  </section>
</main>