---
layout: layouts/base.njk
---
<main class="post">
  <figure class="post--media" data-img-lightness={{ img.lightness or 'dark' }}>
    {% if img.src %}
      {% image img.src, img.alt %}
    {% endif %}

    {% if video.src %}
      <video src="/{{ video.src }}" controls />
    {% endif %}
  </figure> 
  <section class="post--content">
    {{ content | safe }}
  </section>
  {% include "partials/gallery.njk" %}
  {% include "partials/footer.njk" %}
</main>